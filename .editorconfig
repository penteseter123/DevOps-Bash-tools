# stop recursing upwards for other .editorconfig files
#root=true

[*]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[.*]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
